<%- include('../partials/head') %> <%- include('../partials/header') %> <%-
include('../partials/navigation') %>

<main>
  <h1>Add Review for Inventory <%= inv_id %></h1>
  <% if (messages.error) { %>
  <ul class="error">
    <% messages.error.forEach(err => { %>
    <li><%= err %></li>
    <% }); %>
  </ul>
  <% } %>
  <form action="/inv/add-review/<%= inv_id %>" method="POST">
    <label
      >Review:
      <textarea name="review_text" required>
<%= locals.review_text || '' %></textarea
      >
    </label>
    <label
      >Rating (1-5):
      <input
        type="number"
        name="review_rating"
        value="<%= locals.review_rating || '' %>"
        required
        min="1"
        max="5"
    /></label>
    <button type="submit">Submit Review</button>
  </form>
</main>

<%- include('../partials/footer') %>
